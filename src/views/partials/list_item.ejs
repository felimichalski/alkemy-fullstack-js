<tr class="row">
    <% if(op.E_VALUE) { %>
        <td class="field negative">
            - <%- op.E_VALUE %>
        </td>
    <% } else { %>
        <td class="field positive">
            + <%- op.I_VALUE %>
        </td>
    <% } %>
    <td class="field">
        <%- formatDate(op.CREATED_AT) %>
    </td>
    <td class="field">
        <% if(op.CATEGORY !== null) { %>
            <%- op.CATEGORY %>
        <% } else { %>
            <span>-</span>
        <% } %>
    </td>
    <% if(op.ID_OPERATION) { %>
        <td class="field text-center">
            <form action="/dashboard/modify/<%- op.ID_OPERATION %>" method="post">
                <button class="modify">
                    <ion-icon name="pencil-sharp"></ion-icon>
                </button>
            </form>
        </td>
        <td class="field text-center">
            <form action="/dashboard/delete/<%- op.ID_OPERATION %>" method="post">
                <button class="delete">
                    <ion-icon name="trash"></ion-icon>
                </button>
            </form>
        </td>
    <% } %>
</tr>